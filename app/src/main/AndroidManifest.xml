<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.khom.pavlo.crypto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".CApp"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.main.MainActivity" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.addCoin.AddCoinActivity"
            android:theme="@style/AppTheme.NoActionBar_dialog" />
        <activity android:name=".ui.coinInfo.CoinInfoActivity" />
        <activity android:name=".ui.coinAllocation.CoinAllocationActivity" />
        <activity android:name=".ui.holdings.HoldingsActivity" />
        <activity android:name=".ui.settings.SettingsActivity" />
    </application>

    </manifest>
